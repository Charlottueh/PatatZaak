@{
    ViewData["Title"] = "Order with Us Today!";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
  

    <!-- Hero Section: Why Order? -->
    <div class="hero-section">
        <h1 class="display-4">Why Order from Us?</h1>
        <p class="lead">Quick, reliable, and hassle-free! Enjoy your favorite food or products.</p>
    </div>

    <!-- Key Benefits -->
    <div class="container text-center">
        <div class="row">
            <div class="col-md-4">
                <div class="benefit-card">
                    <h4>Fast Delivery</h4>
                    <p>Get your order delivered to you in no time! Our efficient team ensures fast and reliable delivery.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="benefit-card">
                    <h4>Quality Products</h4>
                    <p>We only offer top-quality products. Enjoy fresh food and carefully selected items at your convenience.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="benefit-card">
                    <h4>24/7 Support</h4>
                    <p>Our customer support is available 24/7 to help you with anything you need. We're here for you!</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Testimonials Section -->
    <div class="testimonial-section">
        <h2 class="text-center">What Our Customers Say</h2>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="testimonial">
                        <p>"Absolutely amazing service! Fast delivery and great quality. I will definitely order again!"</p>
                        <footer>- Sarah J.</footer>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="testimonial">
                        <p>"The best delivery service I’ve ever used. Super easy to navigate and always on time!"</p>
                        <footer>- John D.</footer>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="testimonial">
                        <p>"Customer support was fantastic! I had a question and they replied immediately. Very happy!"</p>
                        <footer>- Emily S.</footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

