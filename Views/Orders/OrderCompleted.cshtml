@model PatatZaak.Models.Businesslayer.Order

@{
    ViewData["Title"] = "Bestelling Klaar";
}

<h2>Bestelling Klaar</h2>
<p>De bestelling met ophaalnummer <strong>@Model.PickupNumber</strong> is klaar voor afhalen.</p>

<!-- Button to trigger speech playback -->
<button onclick="playSpeech()">Speel Ophaalnummer voor</button>

<!-- HTML Audio Player to play the generated .wav audio -->
<audio id="audioPlayer" controls>
    <source id="audioSource" type="audio/wav">
    Your browser does not support the audio element.
</audio>

