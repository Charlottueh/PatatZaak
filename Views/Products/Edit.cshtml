@model PatatZaak.Models.Businesslayer.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- ProductName -->
            <div class="form-group">
                <label for="ProductName">Product Name</label>
                <input asp-for="ProductName" class="form-control" required />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <!-- ProductPrice -->
            <div class="form-group">
                <label for="ProductPrice">Price</label>
                <input asp-for="ProductPrice" class="form-control" required />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>

            <!-- ProductCat -->
            <div class="form-group">
                <label for="ProductCat">Category</label>
                <input asp-for="ProductCat" class="form-control" required />
                <span asp-validation-for="ProductCat" class="text-danger"></span>
            </div>

            <!-- ProductDescription -->
            <div class="form-group">
                <label for="ProductDescription">Description</label>
                <textarea asp-for="ProductDescription" class="form-control" rows="3" required></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <!-- ProductPoints -->
            <div class="form-group">
                <label for="ProductPoints">Reward Points</label>
                <input asp-for="ProductPoints" class="form-control" required />
                <span asp-validation-for="ProductPoints" class="text-danger"></span>
            </div>

            <!-- ProductQuantity -->
            <div class="form-group">
                <label for="ProductQuantity">Quantity</label>
                <input asp-for="ProductQuantity" class="form-control" required />
                <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>

            <!-- ProductDiscount -->
            <div class="form-group">
                <label for="ProductDiscount">Discount</label>
                <input asp-for="ProductDiscount" class="form-control" required />
                <span asp-validation-for="ProductDiscount" class="text-danger"></span>
            </div>

            <!-- Photopath -->
            <div class="form-group">
                <label for="Photopath">Photo</label>
                <input type="file" asp-for="Photopath" class="form-control-file" />
                <span asp-validation-for="Photopath" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AdminIndex" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}