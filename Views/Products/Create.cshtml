@model PatatZaak.Models.Businesslayer.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Aanmaken</h1>

<h2>Product</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- ProductName -->
            <div class="form-group">
                <label for="ProductName">Product Name</label>
                <input asp-for="ProductName" class="form-control" required />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <!-- ProductPrice -->
            <div class="form-group">
                <label for="ProductPrice">Price</label>
                <input asp-for="ProductPrice" class="form-control" required />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>

            <!-- ProductCat -->
            <div class="form-group">
                <label for="ProductCat">Category</label>
                <input asp-for="ProductCat" class="form-control" required />
                <span asp-validation-for="ProductCat" class="text-danger"></span>
            </div>

            <!-- ProductDescription -->
            <div class="form-group">
                <label for="ProductDescription">Description</label>
                <input asp-for="ProductDescription" class="form-control" required />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <!-- ProductPoints -->
            <div class="form-group">
                <label for="ProductPoints">Reward Points</label>
                <input asp-for="ProductPoints" class="form-control" required />
                <span asp-validation-for="ProductPoints" class="text-danger"></span>
            </div>

            <!-- ProductQuantity -->
            <div class="form-group">
                <label for="ProductQuantity">Quantity</label>
                <input asp-for="ProductQuantity" class="form-control" required />
                <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>

            <!-- ProductDiscount -->
            <div class="form-group">
                <label>Discount Available</label>
                <div>
                    <label>
                        <input asp-for="ProductDiscount" type="radio" value="true" /> Yes
                    </label>
                    <label>
                        <input asp-for="ProductDiscount" type="radio" value="false" /> No
                    </label>
                </div>
                <span asp-validation-for="ProductDiscount" class="text-danger"></span>
            </div>

            <!-- Photopath -->
            <div class="form-group">
                <label for="Photo">foto</label>
                <input type="file" name="Photo" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}